<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_start_root_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mydialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mission_cancle_dialog_display_1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/start_display_1"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/dialog_start_display_2_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="40dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/start_display_2"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <View
        android:id="@+id/dialog_start_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="54dp"
        android:layout_marginRight="16dp"
        android:background="@color/div_color" />

    <LinearLayout
        android:id="@+id/dialog_start_info_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dialog_start_time_linearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_start_time_image"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_baseline_access_time_24" />

            <TextView
                android:id="@+id/dialog_start_time_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="00:00 AM"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_start_weather_linearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_start_weather_image"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_baseline_wb_sunny_24" />

            <LinearLayout
                android:id="@+id/dialog_start_weather_info_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_start_temperature_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="0F"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dialog_start_temperature_info_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Sunny"
                    android:textColor="@color/black_text"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/mission_start_dialog_start_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_primary_button"
        android:text="@string/start_ok"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp" />
</LinearLayout>