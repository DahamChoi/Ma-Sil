<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finish_mission_root_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.finishmission.FinishMissionActivity">

    <TextView
        android:id="@+id/activity_finish_mission_display_1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/finish_mission_activity_display_1_text"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/activity_finish_mission_level_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_finish_mission_easy_cardview"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:foreground="@drawable/cardview_stroke"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:contentPadding="8dp">

            <TextView
                android:id="@+id/activity_finish_mission_easy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/Easy"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_finish_mission_moderate_cardview"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:foreground="@drawable/cardview_stroke"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:contentPadding="8dp">

            <TextView
                android:id="@+id/activity_finish_mission_moderate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/Moderate"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_finish_mission_hard_cardview"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:foreground="@drawable/cardview_stroke"
            app:cardCornerRadius="999dp"
            app:cardElevation="0dp"
            app:contentPadding="8dp">

            <TextView
                android:id="@+id/activity_finish_mission_hard_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/Hard"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_finish_mission_dummy_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_finish_mission_button_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible">

            <Button
                android:id="@+id/activity_finish_share_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_primary_button"
                android:fontFamily="@font/roboto"
                android:text="@string/finish_mission_activity_button_1_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/activity_finish_end_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_primary_second_button"
                android:fontFamily="@font/roboto"
                android:text="@string/finish_mission_activity_button_2_text"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>