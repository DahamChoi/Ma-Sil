<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mission_main_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".ui.mission.MissionFragment">

    <ImageView
        android:id="@+id/mission_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mission_background_img"
        android:tintMode="add"
        app:tint="#17FFFFFF" />

    <LinearLayout
        android:id="@+id/mission_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mission_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/noto_sans"
            android:text="@string/mission_mission_1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mission_display_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/noto_sans"
            android:text="@string/mission_display_1"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mission_display_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/noto_sans"
            android:text="@string/mission_display_2"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mission_display_3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/noto_sans"
            android:text="@string/mission_display_3"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mission_level_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:contentPaddingLeft="24dp"
            app:contentPaddingRight="24dp">

            <LinearLayout
                android:id="@+id/mission_level_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mission_level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="@string/mission_easy"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/mission_level1_cardview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/mission_level2_cardview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mission_level3_cardview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mission_level4_cardview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/mission_level5_cardview"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="0dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mission_select_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mission_select_left_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/noto_sans"
            android:text="◀"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/mission_select_start_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="2.5"
            android:background="@drawable/mybutton"
            android:text="@string/mission_start"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mission_select_right_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:text="▶"
            android:textColor="@color/white"
            android:textSize="40sp" />
    </LinearLayout>
</FrameLayout>